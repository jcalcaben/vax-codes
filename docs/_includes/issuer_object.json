{
    "object_type": "issuer",
    "id": "{{ page.slug }}",
    "url": "{{ site.url }}/api/v1/issuers/{{ page.slug }}.json",
    "name": "{{ page.issuer_name }}",
    "phone": "{{ page.issuer_phone }}",
    "email": "{{ page.issuer_email }}",
    "website": "{{ page.issuer_website }}",
    "keys": [{% for key in page.issuer_keys %}
        {
            "pubkey": {{ key.pubkey | strip | jsonify }},
            "groups": [{% for group in key.groups %}
                {
                    "id": "{{ group.slug }}",
                    "url": "{{ site.url }}/api/v1/groups/{{ group.slug }}.json"
                }{% if forloop.last == false %},{% endif %}{% endfor %}
            ]
        }{% if forloop.last == false %},{% endif %}{% endfor %}
    ]
}
